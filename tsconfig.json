{
  "compileOnSave": false,
  "compilerOptions": {
    "sourceMap"        : true,
    "emitDecoratorMetadata"  : true,
    "experimentalDecorators" : true,

    "target": "es5",
    "module": "es2015",
    "moduleResolution" : "node",

    "lib": [
      "es2017",
      "dom"
    ],

    "typeRoots": [
      "./node_modules/@types"
    ],
    "types": [
      "node"
    ],

    "baseUrl" : "./src",
    "paths" : {
      "@common/ng/*" : [
        "../../../common/ng/*"
      ],
      "*" : [
        "*",
        "../node_modules/*"
      ]
    }

  },

  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
